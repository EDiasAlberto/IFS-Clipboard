{
  "manifest_version": 3,
  "name": "Zest IFS Clipboard Manager",
  "version": "1.0",
  "background": {
      "service_worker": "/js/service-worker.js"
   },
  "description": "Keeps track of IFS clipboard history",
  "side_panel": {
    "default_path": "/html/sidepanel.html"
  },
  "permissions": ["sidePanel", "tabs", "scripting", "storage", "activeTab"],
  "host_permissions": ["https://*/*"],
  "web_accessible_resources": [{
    "resources": ["img/*.svg", "css/*.css"],
    "matches": ["<all_urls>"]
  }]
}
